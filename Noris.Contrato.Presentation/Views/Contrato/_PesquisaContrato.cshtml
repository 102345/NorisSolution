@model Noris.Contrato.Presentation.ViewModels.ContratoCompraVendaViewModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
            <h4 class="modal-title">Pesquisa Contrato</h4>
        </div>
        <div class="modal-body">


            @using (Html.BeginForm("PesquisarContratos", "Contrato", FormMethod.Post, new { enctype = "multipart/form-data", role = "form", id = "frmPesquisarContrato", @class = "form-horizontal" }))
            {
                    
            <div class="col-xs-12">

                @Html.AntiForgeryToken()

                @Html.ValidationSummary()

                <div class="form-group">
                    Filtro
                </div>


                @Html.HiddenFor(model => model.Id, new { @id = "hdId", @Value = "99999999" })
                @Html.HiddenFor(model => model.Ano, new { @id = "hdAno", @Value = "1200" })
                @Html.HiddenFor(model => model.Arquivo, new { @id = "hdArquivo" })
                @Html.HiddenFor(model => model.DuracaoMes, new { @id = "hdDuracaoMes", @Value = "12" })
                @Html.HiddenFor(model => model.QtdeNegociada, new { @id = "hdQtdeNegociada", @Value = "1" })
                @Html.HiddenFor(model => model.ValorNegociado, new { @id = "hdValorNegociado", @Value = "1" })
                @Html.HiddenFor(model => model.Mes, new { @id = "hdMes", @Value = "12" })
                @Html.HiddenFor(model => model.TipoContrato, new { @id = "hdTipoContrato" ,@Value="Venda"})



                <div class="form-group">
                    <label for="txtCliente" class="form-label">Cliente</label>
                    @Html.TextBoxFor(model => model.NomeCliente, new { placeholder = "Cliente", @class = "form-control", @id = "txtCliente" })
                </div>

            </div>
                <div class="modal-footer">

                    <table>
                        <tr>

                            <td width="600px;">
                                &nbsp;
                            </td>
                            <td>
                                <button type="submit" class="btn btn-primary" name="OK" value="OK">OK</button>
                            </td>
                            <td>
                                &nbsp;
                            </td>
                            <td>
                                &nbsp;
                            </td>
                            <td>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                            </td>
                        </tr>

                    </table>
                </div>



            }


        </div>

    </div>


</div>






