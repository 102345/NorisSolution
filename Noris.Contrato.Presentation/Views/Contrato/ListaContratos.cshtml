@model IEnumerable<Noris.Contrato.Presentation.ViewModels.ContratoCompraVendaViewModel>


<div class="col-xs-12">
    <div class="col-xs-12">
        <div class="col-xs-4">
            &nbsp;
        </div>
    </div>
    <div class="col-xs-12">
        <div class="col-xs-4">
            &nbsp;
        </div>
    </div>

    <div class="col-xs-12">
        <div class="col-xs-2">
            &nbsp;
        </div>
        <div class="col-xs-2">
            &nbsp;
        </div>
        <div class="col-xs-2">
            &nbsp;
        </div>
        <div class="col-xs-2">
            &nbsp;
        </div>
        <div class="col-xs-2">
            <button type="button" id="btnIncluirContrato" class="btn btn-primary incluirContrato">
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                <span class="glyphicon-class">Incluir</span>
            </button>
        </div>
        <div class="col-xs-2">
            <button type="button" id="btnPesquisarContrato" class="btn btn-primary pesquisarContrato">
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                <span class="glyphicon-class">Pesquisar</span>
            </button>
        </div>
    </div>
    <div>

        <table id="tblVeiculos" class="table table-striped table-hover">


            <thead>
                <tr>

                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.NomeCliente)</th>
                    <th>@Html.DisplayNameFor(model => model.TipoContrato)</th>
                    <th>@Html.DisplayNameFor(model => model.QtdeNegociada)</th>
                    <th>@Html.DisplayNameFor(model => model.ValorNegociado)</th>
                    <th>@Html.DisplayNameFor(model => model.Mes)</th>
                    <th>@Html.DisplayNameFor(model => model.Ano)</th>
                    <th>@Html.DisplayNameFor(model => model.DuracaoMes)</th>
                    <th>@Html.DisplayNameFor(model => model.Arquivo)</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>

            <tbody>



                @foreach (var item in Model)
                {
                <tr>

                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.NomeCliente)</td>
                    <td>@Html.DisplayFor(modelItem => item.TipoContrato)</td>
                    <td>@Html.DisplayFor(modelItem => item.QtdeNegociada)</td>
                    <td>@Html.DisplayFor(modelItem => item.ValorNegociado)</td>
                    <td>@Html.DisplayFor(modelItem => item.Mes)</td>
                    <td>@Html.DisplayFor(modelItem => item.Ano)</td>
                    <td>@Html.DisplayFor(modelItem => item.DuracaoMes)</td>
                    <td>@Html.DisplayFor(modelItem => item.Arquivo)</td>
                    @if (item.TipoArquivo != null)
                    {
                    <td>
                        <a href="@Url.Action(string.Format("DownloadArquivo/{0}", @item.Id), "Contrato")" title="Arquivo" >
                            Download
                        </a>

                    </td>
                    }
                    else
                    {
                        <td>
                          
                        </td>

                    }

                    <td>
                        <button type="button" id="btnEditarContrato" class="btn btn-success editarContrato" data-id="@item.Id">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                            <span class="glyphicon-class">Editar</span>
                        </button>
                    </td>
                    <td>
                        <button type="button" id="btnExcluirContrato" class="btn btn-danger excluirContrato" data-id="@item.Id">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            <span class="glyphicon-class">Excluir</span>
                        </button>
                    </td>

                </tr>


                }


            </tbody>
        </table>


    </div>

</div>


<div role="dialog" tabindex="-1" id="modExcluirContrato" class="modal fade">

</div>


<div role="dialog" tabindex="-1" id="modIncluirContrato" class="modal fade">

</div>

<div role="dialog" tabindex="-1" id="modAtualizarContrato" class="modal fade">

</div>

<div role="dialog" tabindex="-1" id="modPesquisarContrato" class="modal fade">

</div>














